                </svg>
                Skills
            </button>
        </div>
        <div class="col-lg-9 col-md-12">
            <div class="card row d-flex p-3" style="flex-direction: row;">
                <div class="col-md-6 col-sm-5 p-2 d-flex"
                     style="font-size:18px;align-items: center;justify-content: space-around;"
                     id="admin-page-right-nav">
                    <span style="font-size:30px;cursor:pointer" onclick="adminpage_openNav()"
                          class="d-lg-none d-flex" style="position:absolute;display: inline-flex;">&#9776;</span>
                    @DateTime.Now
                </div>
                <div class="col-md-3 col-sm-1">
                </div>
                <div class="col-md-3 col-sm-5 d-flex p-2" id="admin-page-left-nav">
                    <img class="img-fluid" src="~/images/volunteer1.png" style="border-radius: 50%;height:40px;">
                    <button value=""
                            style="border: none; background: white;margin-left: 10px;height: 30px;"
                            class="dropdown-toggle bg-light user-btn" type="button" id="dropdownMenu2"
                            data-bs-toggle="dropdown" aria-expanded="false">
                            @Model.userName
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenu2">
                        <li class="dropdownnavbarlinks">
                            <button class="dropdown-item" type="button">
                                <a style="text-decoration:none;color:black;" href="@Url.Action("logout", "AdminSkill")">logout </a>
                            </button>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="container mt-3">
                <h1>
                    Skill Master
                </h1>
                <hr>
                <div class="row mt-4" style="justify-content: space-between;">
                    <div class="col-3 px-1"
                         style="align-items: center;display: flex;justify-content:space-between;flex-direction: row;border:1px solid gray;height:50px;
                                    border-radius: 10px;margin-left:10px;">
                        <img src="~/images/search.png" style="height:20px;">
                        <input type="text" id="searchskill" placeholder="Search" style="width:90%;border: none;padding:5px">
                    </div>
                    <div class="col-2">
                        <button value=""
                                class="dropdown-toggle bg-light user-btn" type="button" id="menudropdown"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                SortBy
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenu2">
                            <li class="dropdownnavbarlinks">
                                <button class="dropdown-item" type="button" onclick="sortby(0)">
                                    <p> &#8593;Up</p>
                                </button>
                            </li>
                            <li class="dropdownnavbarlinks">
                                <button class="dropdown-item" type="button" onclick="sortby(1)">
                                    <p>&#8595;Down</p>
                                </button>
                            </li>
                        </ul>
                    </div>
                    <div class="col-3"></div>
                    <div class="col-3 d-flex" style="justify-content: flex-end;">
                        <button style="background: none;border: 2px solid orange;border-radius: 15px;color: orange;font-weight: bolder;width: 150px;margin-right: 0px;"
                                class="p-2" data-bs-toggle="modal" data-bs-target="#AddskillModal">

                            + Add
                        </button>
                    </div>
                </div>
                <div class="row mt-4" id="skillTable">
                </div>
            </div>
        </div>
    </div>
</div>
@Html.Partial("_ModalSkillCrud")


<script src="js/bootstrap.bundle.js"></script>
<script>
    function adminpage_openNav() {
        document.getElementById("admin-page-navigation").style.display = "flex";
        document.getElementById("admin-page-navigation").style.width = "65%";
        document.getElementById("admin-page-navigation").style.opacity = "1";
        document.getElementById("admin-page-navigation").style.height = "100vh";

    }
    function closeNav() {
        document.getElementById("admin-page-navigation").style.width = "0%";
        document.getElementById("admin-page-navigation").style.opacity = "0";
    }
</script>
 @section Javascript{
<script src="~/js/AdminSkill.js" asp-append-version="true"></script>
  }
