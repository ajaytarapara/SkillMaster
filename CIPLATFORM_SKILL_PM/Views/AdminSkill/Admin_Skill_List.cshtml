@model CIPLATFORM_SKILL_PM.Models.ViewModel.SkillModel
<div style="height:100vh;width:100vw;" id="loader">
    <div class="spinner-border text-danger"></div>
</div>
<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
<script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-3 col-md-12 d-lg-flex flex-column" id="admin-page-navigation">
            <div class="mt-3 d-flex"
                 style="width:100%;padding-left: 15px;justify-content: space-between;align-items: center;">
                <h5>
                    NAVIGATION
                </h5>
                <a href="javascript:void(0)" class="closebtn d-flex d-lg-none" onclick="closeNav()">&times;</a>
            </div>
            <button class="admin-page-button-nav">
                <svg class="mt-1 mx-1" xmlns="http://www.w3.org/2000/svg" width="30" height="35" fill="currentColor"
                     class="bi bi-tools admin-page-btn-img-nav" viewBox="0 0 16 16">
                    <path d="M1 0 0 1l2.2 3.081a1 1 0 0 0 .815.419h.07a1 1 0 0 1 .708.293l2.675 2.675-2.617 2.654A3.003 3.003 0 0 0 0 13a3 3 0 1 0
